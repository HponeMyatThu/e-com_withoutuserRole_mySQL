<%- include("../includes/head.ejs") %> <%- include("../includes/navigation.ejs")
%>

<h1>Product Page</h1>
<%if(prods.length>0){%>
         <div class="container mt-3">
            <div class="row">
                <% for (products of prods) {%> 
                <div class="col-md-2">
                    <div class="card" style="width: 10rem;">
                    <div class="card-body">
                        <p class="card-text">Title : <%= products.title %></p>
                        <img src="<%= products.imageUrl %>" class="card-img-top" alt="<%= products.imageUrl %>">
                        <p class="card-text">Des : <%= products.description %></p>
                        <p class="card-text">Price : <%= products.price %></p>
                        <a href="/detail-product/<%=products.id%>" class="btn btn-secondary mb-1">Detail</a>
                        
                        <form action="/cart" method="POST">
                            <button class="btn btn-primary" type="submit">
                                Add to Cart
                            </button>
                            <input type="hidden" name="productId" value="<%= products.id %>">
                        </form>
                    </div>
                    </div>
                </div>
                <%}%>
            </div>
          </div>
<%}else{%>
<h1>No Products</h1>
<%}%>

<%- include("../includes/end.ejs") %>
