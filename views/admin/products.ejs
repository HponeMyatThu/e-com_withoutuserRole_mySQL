<%- include("../includes/head.ejs") %> <%- include("../includes/navigation.ejs")
%>

<h1>Product Page</h1>
<%if(prods.length>0){%>
         <div class="container mt-3">
            <div class="row">
                <% for (products of prods) {%> 
                <div class="col-md-2">
                    <div class="card" style="width: 10rem;">
                    <div class="card-body">
                        <p class="card-text">Title : <%= products.title %></p>
                        <img src="<%= products.imageUrl%>" class="card-img-top" alt="<%= products.imageUrl %>">
                        <p class="card-text">Des : <%= products.description %></p>
                        <p class="card-text">Price : <%= products.price %></p>
                        <a href="/admin/edit-product/<%=products.id%>?edit=true" class="btn btn-secondary">Edit</a>
                        <form action="/admin/delete-product" method="POST">
                            <input type="hidden" value="<%= products.id %>" name="productId">
                            <button class="btn btn-danger mt-1" type="submit">Delete</button>
                        </form>
                    </div>
                    </div>
                </div>
                <%}%>
            </div>
          </div>
<%}else{%>
<h1>No Products</h1>
<%}%>

<%- include("../includes/end.ejs") %>
